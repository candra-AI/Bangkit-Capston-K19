<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true"
    tools:context=".ui.fragment.other.detectionresult.DetectionResultFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_core"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_logo"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginTop="@dimen/size_16"
                android:src="@drawable/ic_logo"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_detect_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_24"
                android:fontFamily="@font/raleway_semibold"
                android:text="@string/result"
                android:textColor="@color/black"
                android:textSize="24sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/iv_logo" />


            <!-- black background color for progress bar-->

            <ImageView
                android:id="@+id/iv_result"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginTop="@dimen/size_16"
                app:layout_constraintEnd_toEndOf="@+id/tv_detect_result"
                app:layout_constraintStart_toStartOf="@id/tv_detect_result"
                app:layout_constraintTop_toBottomOf="@id/tv_detect_result"
                tools:src="@drawable/ic_logo" />

            <TextView
                android:id="@+id/tv_result_disese_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="36dp"
                android:fontFamily="@font/raleway_semibold"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iv_result"
                tools:text="Name Of Disease" />

            <TextView
                android:id="@+id/tv_precent_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/size_4"
                android:fontFamily="@font/raleway_semibold"
                android:textColor="@color/black"
                app:layout_constraintBottom_toTopOf="@+id/pb_result_1"
                app:layout_constraintEnd_toEndOf="@+id/pb_result_1"
                tools:text="85.3%" />

            <ProgressBar
                android:id="@+id/pb_result_1"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="0dp"
                android:layout_height="@dimen/size_24"
                android:layout_marginStart="@dimen/size_24"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="@dimen/size_24"
                android:max="100"
                android:progress="50"
                android:progressBackgroundTint="@color/grey"
                android:progressTint="@color/orange_200"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_result_disese_1" />

            <TextView
                android:id="@+id/tv_result_disese_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:fontFamily="@font/raleway_semibold"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="@id/tv_result_disese_1"
                app:layout_constraintTop_toBottomOf="@+id/pb_result_1"
                tools:text="Name Of Disease" />

            <TextView
                android:id="@+id/tv_precent_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/size_4"
                android:fontFamily="@font/raleway_semibold"
                android:textColor="@color/black"
                app:layout_constraintBottom_toTopOf="@+id/pb_result_2"
                app:layout_constraintEnd_toEndOf="@+id/pb_result_2"
                tools:text="72.3%" />

            <ProgressBar
                android:id="@+id/pb_result_2"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="0dp"
                android:layout_height="@dimen/size_24"
                android:layout_marginStart="@dimen/size_24"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="@dimen/size_24"
                android:max="100"
                android:progress="50"
                android:progressBackgroundTint="@color/grey"
                android:progressTint="@color/orange_200"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_result_disese_2" />

            <TextView
                android:id="@+id/tv_result_disese_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:fontFamily="@font/raleway_semibold"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="@id/pb_result_2"
                app:layout_constraintTop_toBottomOf="@+id/pb_result_2"
                tools:text="Name Of Disease" />

            <TextView
                android:id="@+id/tv_precent_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/size_4"
                android:fontFamily="@font/raleway_semibold"
                android:textColor="@color/black"
                app:layout_constraintBottom_toTopOf="@+id/pb_result_3"
                app:layout_constraintEnd_toEndOf="@+id/pb_result_3"
                tools:text="50.3%" />

            <ProgressBar
                android:id="@+id/pb_result_3"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="0dp"
                android:layout_height="@dimen/size_24"
                android:layout_marginStart="@dimen/size_24"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="@dimen/size_24"
                android:max="100"
                android:progress="50"
                android:progressBackgroundTint="@color/grey"
                android:progressTint="@color/orange_200"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_result_disese_3" />

            <Button
                android:id="@+id/btn_validity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_16"
                android:text="@string/validity"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.524"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/pb_result_3" />

            <Button
                android:id="@+id/btn_skip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_8"
                android:layout_marginBottom="@dimen/size_8"
                android:backgroundTint="@color/white"
                android:paddingStart="@dimen/size_48"
                android:paddingEnd="@dimen/size_48"
                android:text="@string/skip"
                android:textColor="@color/orange_200"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btn_validity" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <ProgressBar
            android:id="@+id/pb_detect"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_centerInParent="true"/>

    </RelativeLayout>
</androidx.core.widget.NestedScrollView>